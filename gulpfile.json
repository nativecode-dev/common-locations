{
  "debug": {
    "json": {
      "title": "json"
    },
    "ts": {
      "title": "ts"
    }
  },
  "destination": {
    "lib": "lib"
  },
  "env": {
    "common": {},
    "debug": {
      "DEBUG": "common-locations",
      "NODE_ENV": "debug"
    },
    "production": {
      "NODE_ENV": "production"
    }
  },
  "plugins": {
    "babel": {
      "presets": "es2015"
    },
    "mocha": {
      "reporter": "spec"
    }
  },
  "sources": {
    "clean": ["lib/", "*.tgz"],
    "json": ["platforms/**/*.json"],
    "tests": ["tests/**/when_*.js"],
    "ts": ["src/**/*.ts"]
  }
}
