{
  "compilerOptions": {
    "declaration": true,
    "diagnostics": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2015",
    "typeRoots": [],
    "types": [
      "@types/node"
    ]
  },
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
